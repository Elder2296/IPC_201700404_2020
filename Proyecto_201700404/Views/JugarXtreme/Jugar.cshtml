@using Proyecto_201700404.Clases
@{
    Layout = null;
    Partida partida = Proyecto_201700404.Clases.Variables.partida;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Xtreme</title>
    <link href="~/Content/Tablerocss.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body class="variable">

    @using (Ajax.BeginForm("Xtreme", "Xtreme", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "tablero_juego" }))
    {

        <nav class="navbar navbar-expand-lg navbar-light ">
            <div class="container">
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">


                        <li class="nav-item ">
                            <a class="nav-link active text-white btn btn-danger" href="#" tabindex="-1" aria-disabled="true">Iniciar Juego</a>
                        </li>

                    </ul>

                    <form class="form-inline my-2 my-lg-0">
                        <button class="btn btn-danger my-2 my-sm-0 btn-lg">@Html.ActionLink("Subir", "Archivo", "Archivo", new { area = "" }, new { @class = " text-white" })</button>

                        <button class="btn btn-warning my-2 my-sm-0 btn-lg">@Html.ActionLink("Descargar", "Descargar", "Jugar", new { area = "" }, new { @class = " text-white" })</button>
                        <button class="btn btn-dark my-2 my-sm-0 btn-lg">@Html.ActionLink("Regresar", "Regresar", "Jugar", new { area = "" }, new { @class = " text-white" })</button>


                    </form>
                </div>


            </div>


        </nav>
        <div class="container">
            <div class="row justify-content-md-center">
                <div style="background-color:rgba(128, 128, 128,.4);border-radius:10px;" class="col">
                    <label style=" font-family:'Agency FB';font-size:25px;" class="row justify-content-md-center text-white">@partida.JugadorLocal().Alias</label>

                    <div class="row justify-content-md-center">
                        @foreach (var ficha in partida.JugadorLocal().MisFichas())
                        {
                            <div style="width:60px;height:60px;" class="bg-orange">
                                <button style="height:100%;width:100%;border-radius:100%;border-color:white;" class="@ficha.clase"></button>

                            </div>


                        }
                    </div>

                </div>
                <div class="col">
                    <div style="background-color:rgba(128, 128, 128,.9);border-radius:10px ;" class="col">
                        <label style=" font-family:'Agency FB';font-size:25px;" class="row justify-content-md-center text-white">@partida.JugadorInvitado().Alias</label>

                        <div class="row justify-content-md-center">
                            @foreach (var ficha in partida.JugadorInvitado().MisFichas())
                            {
                                <div style="width:60px;height:60px;" class="bg-orange">
                                    <button style="height:100%;width:100%;border-radius:100%;border-color:white;" class="@ficha.clase"></button>

                                </div>


                            }

                        </div>


                    </div>

                </div>

            </div>

        </div>



    }

    <div id="tablero_juego">
        @Html.Partial("Tablero")

    </div>
    @Scripts.Render("~/bundles/ajax")

</body>
</html>
